<% |
    $url,
    $bucket,
    $access_key,
    $secret_key,
    $hostname,
| -%>
#!/bin/dash

ns=$1
id=$2
file=$3

s3cmd=<%= $::cfbackup::s3::s3cmd %>
s3cfg=<%= $::cfbackup::s3::s3cfg %>

host=<%= $hostname %>
bucket=<%= $bucket %>

$s3cmd \
    --config=$s3cfg \
    --ssl \
    --check-certificate \
    --no-encrypt \
    --stats \
    --verbose \
    get \
    s3://$bucket/$host/$ns/$id/$(basename $file) \
    $file
